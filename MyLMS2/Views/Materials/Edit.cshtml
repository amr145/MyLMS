@model MyLMS2.Models.Material
@{
    Layout = "~/Views/Shared/_LayoutMaterial.cshtml";
    ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"] Material</h2>

<form asp-action="@ViewData["Title"]" enctype="multipart/form-data" class="mt-3">
    <div class="mb-3">
        <label asp-for="Title" class="form-label"></label>
        <input asp-for="Title" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="CourseId" class="form-label">Course</label>
        <select asp-for="CourseId" asp-items="ViewBag.CourseId" class="form-control"></select>
    </div>

    <div class="mb-3">
        <label>Upload PDF</label>
        <input type="file" name="pdfFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Upload Word</label>
        <input type="file" name="wordFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Upload PowerPoint</label>
        <input type="file" name="pptFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Upload Audio</label>
        <input type="file" name="audioFile" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Video Link</label>
        <input asp-for="VideoPath" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">💾 Save</button>
    <a asp-action="Index" class="btn btn-secondary">⬅ Back</a>
</form>


