@model MyLMS2.Models.Module
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Delete Material";
}

<div class="container mt-4">
    <!-- العنوان -->
    <h2 class="text-center text-white py-2 rounded mb-4"
        style="background:#2C3E50; max-width:500px; margin:0 auto;">
        🗑 Delete Material
    </h2>

    <!-- الكارد -->
    <div class="card shadow p-4 mx-auto" style="max-width:500px;">
        <div class="alert alert-danger mb-4">
            <p>⚠️ Are you sure you want to delete this material?</p>
            <p><strong>@Model.Title</strong> - @Model.Course?.Title</p>
        </div>

        <!-- الفورم -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-danger">✅ Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">⬅️ Cancel</a>
            </div>
        </form>
    </div>
</div>
