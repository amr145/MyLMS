@model MyLMS2.Models.Module

@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
    ViewData["Title"] = "Module Details";
}

<h2>Module Details</h2>

<div class="card p-3">
    <h4>@Model.Title</h4>
    <p><strong>Course:</strong> @Model.Course?.Title</p>

    <ul>
        @if (!string.IsNullOrEmpty(Model.PdfPath))
        {
            <li>
                <a href="@Url.Content(Model.PdfPath)" target="_blank">📄 View PDF</a>
            </li>
        }
        @if (!string.IsNullOrEmpty(Model.WordPath))
        {
            <li>
                <a href="@Url.Content(Model.WordPath)" target="_blank">📝 View Word</a>
            </li>
        }
        @if (!string.IsNullOrEmpty(Model.PptPath))
        {
            <li>
                <a href="@Url.Content(Model.PptPath)" target="_blank">📊 View PPT</a>
            </li>
        }
        @if (!string.IsNullOrEmpty(Model.AudioPath))
        {
            <li>
                <audio controls>
                    <source src="@Url.Content(Model.AudioPath)" type="audio/mpeg" />
                    Your browser does not support the audio element.
                </audio>
            </li>
        }
        @if (!string.IsNullOrEmpty(Model.VideoPath))
        {
            <li>
                🎬 <a href="@Model.VideoPath" target="_blank">Watch Video</a>
            </li>
        }
    </ul>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">>⬅️Back to List</a>



