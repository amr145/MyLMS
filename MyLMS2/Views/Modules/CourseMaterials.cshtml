@model IEnumerable<MyLMS2.Models.Module>

@{
    ViewData["Title"] = "Course Materials";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h2 class="mb-4">📚 Course Materials</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No materials available for this course.
    </div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Course</th>
                <th>Files</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Course.Title</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.PdfPath))
                        {
                            <a href="@item.PdfPath" target="_blank" class="btn btn-sm btn-outline-danger m-1">📄 PDF</a>
                        }
                        @if (!string.IsNullOrEmpty(item.WordPath))
                        {
                            <a href="@item.WordPath" target="_blank" class="btn btn-sm btn-outline-primary m-1">📝 Word</a>
                        }
                        @if (!string.IsNullOrEmpty(item.PptPath))
                        {
                            <a href="@item.PptPath" target="_blank" class="btn btn-sm btn-outline-warning m-1">📊 PPT</a>
                        }
                        @if (!string.IsNullOrEmpty(item.AudioPath))
                        {
                            <a href="@item.AudioPath" target="_blank" class="btn btn-sm btn-outline-success m-1">🎧 Audio</a>
                        }
                        @if (!string.IsNullOrEmpty(item.VideoPath))
                        {
                            <a href="@item.VideoPath" target="_blank" class="btn btn-sm btn-outline-dark m-1">🎥 Video</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

