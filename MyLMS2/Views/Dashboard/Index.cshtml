@model MyLMS2.ViewModels.DashboardViewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>LMS Admin Dashboard</title>
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">

    <!-- Main Content-->
    <section class="page-section mt-4 pt-4">
        @* قللت الـ margin-top *@
        <div class="container px-4">

            <!-- Dashboard Title -->
            <h2 class="mb-4 fw-bold text-dark text-center">Dashboard</h2>

            <!-- Stats Cards -->
            <div class="d-flex flex-wrap justify-content-center gap-4 mb-4">
                <div class="card text-center shadow-lg border-0" >
                    <div class="card-body">
                        <h5 class="fw-bold text-white px-3 py-2 rounded d-inline-block mb-3"
                            style="background: #1abc9c; font-size: 1rem; width: 360px;">
                            Total Students
                        </h5>
                        <p class="display-5 fw-bold text-primary">@Model.StudentsCount</p>
                    </div>
                </div>

                <div class="card text-center shadow-lg border-0" >
                    <div class="card-body">
                        <h5 class="fw-bold text-white px-3 py-2 rounded d-inline-block mb-3"
                            style="background: #1abc9c; font-size: 1rem;  width: 360px;">
                            Total Instructors
                        </h5>
                        <p class="display-5 fw-bold text-success">@Model.InstructorsCount</p>
                    </div>
                </div>

                <div class="card text-center shadow-lg border-0" >
                    <div class="card-body">
                        <h5 class="fw-bold text-white px-3 py-2 rounded d-inline-block mb-3"
                            style="background: #1abc9c; font-size: 1rem;  width: 360px;">
                            Total Courses
                        </h5>
                        <p class="display-5 fw-bold text-warning">@Model.CoursesCount</p>
                    </div>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="card shadow-lg border-0 mx-auto" >
                <div class="card-body text-center">
                    <h5 class="fw-bold text-white px-3 py-2 rounded d-block mx-auto mb-3"
                        style="background: #1abc9c; font-size: 1rem;">
                        <i class="bi bi-lightning-charge me-2"></i> Quick Actions
                    </h5>

                    <div class="d-flex flex-wrap gap-3 justify-content-center">
                        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-info text-white btn-sm">
                            <i class="bi bi-person-plus me-2"></i> Create User
                        </a>
                        <a asp-controller="Courses" asp-action="Create" class="btn btn-warning text-white btn-sm">
                            <i class="bi bi-journal-plus me-2"></i> Create Course
                        </a>
                    </div>
                </div>
            </div>

        </div>
    </section>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/js/scripts.js"></script>
</body>
</html>
