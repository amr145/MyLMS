@model MyLMS2.Models.Course

@{
    ViewData["Title"] = "Edit Course";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 class="container d-flex justify-content-center align-items-center">@ViewData["Title"]</h1>

<section class="page-section" style="background-color: #2C3E50; color: #fff; padding: 0rem 0;">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;background: #1abc9c;">
        <div class="card p-4" style="width: 400px; background-color: #ffffff; color: #000;">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <input asp-for="Title" class="form-control" placeholder="Course Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <input asp-for="Description" class="form-control" placeholder="Course Description" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <select asp-for="InstructorId" class="form-select" asp-items="ViewBag.InstructorId">
                        <option value="">-- Select Instructor --</option>
                    </select>
                    <span asp-validation-for="InstructorId" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100 mb-2">Save</button>
                <a asp-action="Index" class="btn btn-secondary w-100">Back to List</a>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
