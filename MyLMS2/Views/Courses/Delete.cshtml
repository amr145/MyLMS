

@model MyLMS2.Models.Course

@{
    ViewData["Title"] = "Delete Course";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 class="container d-flex justify-content-center align-items-center mb-4">@ViewData["Title"]</h1>

<section class="page-section" style="background-color: #2C3E50; color: #fff; padding: 0rem 0;">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;background: #1abc9c;">
        <div class="card shadow-sm border-0 rounded-3 p-4" style="width: 400px; background-color: #fff; color: #000;">
            <h4 class="text-danger mb-3 text-center">Are you sure you want to delete this course?</h4>
            <hr />

            <dl class="row mb-4">
                <dt class="col-sm-4 fw-bold">Title</dt>
                <dd class="col-sm-8">@Model.Title</dd>

                <dt class="col-sm-4 fw-bold">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>

                <dt class="col-sm-4 fw-bold">Instructor</dt>
                <dd class="col-sm-8">@Model.Instructor?.UserName</dd>
            </dl>

            <form asp-action="Delete" method="post" class="d-flex justify-content-between">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</section>
