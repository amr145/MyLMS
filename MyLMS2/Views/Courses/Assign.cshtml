@model IEnumerable<MyLMS2.Models.Course>
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<section class="page-section bg-primary text-white mb-0" style="padding: 2rem 0;">
    <div class="container">
        <h2 class="text-center text-white mb-4">Select a Course to Assign Students</h2>

        <div class="card shadow-lg rounded-3">
            <div class="card-body p-4">
                <table class="table table-hover table-bordered text-center align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Course</th>
                            <th>Instructor</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var course in Model)
                        {
                            <tr>
                                <td>@course.Title</td>
                                <td>@course.Instructor?.UserName</td>
                                <td>
                                    <a asp-action="AssignStudents" asp-route-id="@course.Id"
                                       class="btn btn-success btn-sm rounded-pill px-3">
                                        Assign Students
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
