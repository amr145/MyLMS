
@model MyLMS2.Models.Course

@{
    ViewData["Title"] = "Course Details";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 class="container d-flex justify-content-center align-items-center">@ViewData["Title"]</h1>

<section class="page-section" style="background-color: #2C3E50; color: #fff; padding: 0rem 0;">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 70vh;background: #1abc9c;">
        <div class="card p-4" style="width: 500px; background-color: #ffffff; color: #000;">

            <h3 class="text-center mb-3">@Model.Title</h3>
            <hr />

            <dl class="row mb-3">
                <dt class="col-sm-4 fw-bold">Description</dt>
                <dd class="col-sm-8">@Model.Description</dd>
                @if (!User.IsInRole("Instructor"))
                    {
                <dt class="col-sm-4 fw-bold">Instructor</dt>
                <dd class="col-sm-8">@Model.Instructor?.UserName</dd>
                    }

                <dt class="col-sm-4 fw-bold">Number of Students</dt>
                <dd class="col-sm-8">@Model.Enrollments?.Count()</dd>
            </dl>

            <div class="d-flex justify-content-between mt-4">
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>

                @if (User.IsInRole("Admin"))
                {
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
