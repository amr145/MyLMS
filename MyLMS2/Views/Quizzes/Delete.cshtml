@model MyLMS2.Models.Quiz

@{
    ViewData["Title"] = "Delete Quiz";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center text-white py-2 rounded mb-4" style="background:#2C3E50;">🗑 Delete Quiz</h2>

    <div class="card shadow-lg border-0">
        <div class="card-body">
            <h4>Are you sure you want to delete this quiz?</h4>
            <table class="table table-bordered">
                <tr>
                    <th>Title</th>
                    <td>@Model.Title</td>
                </tr>
                <tr>
                    <th>Course</th>
                    <td>@(Model.Course != null ? Model.Course.Title : "No course")</td>
                </tr>
            </table>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
