@model MyLMS2.ViewModels.InstructorHomeViewModel
@{
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>LMS Instructor Home</title>
    <link rel="icon" type="image/x-icon" href="~/assets/favicon.ico" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/styles.css" rel="stylesheet" />
</head>
<body id="page-top">

    <!-- Main Content-->
    <section class="page-section mt-5 pt-5">
        <div class="container">
            <!-- Title -->
            <h2 class="text-center fw-bold text-white py-2 rounded mb-5"
                style="background:#1abc9c; max-width:450px; margin:0 auto;">
                Instructor Dashboard
            </h2>

            <!-- Cards Row -->
            <div class="row g-4 mb-5 justify-content-center">
                <div class="col-md-4">
                    <div class="card text-center shadow-lg border-0 h-100">
                        <div class="card-body">
                            <h5 class="card-title text-white py-2 rounded" style="background:#1abc9c;">My Courses</h5>
                            <p class="display-5 fw-bold text-primary">@Model.CoursesCount</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Latest Courses -->
            <div class="card shadow-lg border-0 mx-auto" style="max-width:600px;">
                <div class="card-body p-4">
                    <h4 class="fw-bold mb-3 text-dark">
                        <i class="bi bi-journal-bookmark me-2 text-primary"></i>
                        <a style="color:#1abc9c">Latest Courses</a>
                    </h4>
                    <ul class="list-group mb-4">
                        @foreach (var course in Model.LatestCourses)
                        {
                            <li class="list-group-item d-flex align-items-center">
                                <i class="bi bi-check-circle text-success me-2"></i> @course.Title
                            </li>
                        }
                    </ul>
                    <div class="text-center">
                        <a asp-controller="Courses" asp-action="Index" class="btn btn-primary rounded-pill px-4 shadow-sm">
                            View All Courses
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/scripts.js"></script>
</body>
</html>
