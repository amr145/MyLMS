@model IEnumerable<MyLMS2.Models.Enrollment>

@{
    ViewData["Title"] = "My Courses (Student)";
    var groupedCourses = Model.GroupBy(e => e.Course).ToList();
}

<div class="container mt-4">
    <h2 class="text-success mb-4">🎓 My Courses</h2>

    <table class="table table-bordered table-striped shadow">
        <thead class="table-success">
            <tr>
                <th>Course Title</th>
                <th>Instructor</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in groupedCourses)
            {
                <tr>
                    <td>@group.Key?.Title</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary"
                                data-bs-toggle="modal"
                                data-bs-target="#instructorModal-@group.Key?.Id">
                            👨‍🏫 View Instructor
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="instructorModal-@group.Key?.Id" tabindex="-1" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header bg-success text-white">
                                        <h5 class="modal-title">Instructor for @group.Key?.Title</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        @if (group.Key?.Instructor != null)
                                        {
                                            <p><strong>@group.Key.Instructor.UserName</strong></p>
                                        }
                                        else
                                        {
                                            <p class="text-muted">No instructor assigned.</p>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
