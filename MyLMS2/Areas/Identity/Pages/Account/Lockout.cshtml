@page
@model LockoutModel
@{
    ViewData["Title"] = "Locked Out";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div class="d-flex justify-content-center align-items-center vh-100" style="background:#1abc9c;">
    <div class="card shadow-lg rounded-4 text-center p-5 border-0"
         style="max-width:600px; background: rgba(44, 62, 80, 0.95); color: white;">

        <!-- Icon -->
        <div class="mb-4">
            <div class="display-1" style="font-size:6rem; color:#f39c12;">🔒</div>
        </div>

        <!-- Title -->
        <h1 class="fw-bold mb-3" style="font-size:2.5rem; letter-spacing:2px; color:#ecf0f1;">
            @ViewData["Title"]
        </h1>

        <!-- Message -->
        <p class="lead mb-4" style="color:#bdc3c7;">
            This account has been locked out, please try again later.
        </p>

        <!-- Button -->
        <a class="btn btn-lg px-5 py-3 fw-bold text-uppercase"
           href="/"
           style="background: linear-gradient(90deg, #f39c12, #e67e22); color:white; border:none; border-radius:50px; box-shadow:0 5px 20px rgba(0,0,0,0.4); transition:all 0.3s;">
            🔙 Back to Home
        </a>
    </div>
</div>

<style>
    .btn:hover {
        transform: translateY(-3px) scale(1.03);
        box-shadow: 0 10px 25px rgba(0,0,0,0.5);
    }
</style>
