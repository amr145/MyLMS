@page
@model RegisterModel
@{
    ViewData["Title"] = "Create User";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}
<h1 class ="container d-flex justify-content-center align-items-center">@ViewData["Title"]</h1>
<section class="page-section bg-primary text-white mb-0" id="create-user" style="padding: 0rem 0;">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="card p-4" style="width: 400px; background-color: #ffffff; color: #000;">
            <form asp-action="CreateUser" method="post">
                <div class="mb-3">
                    <input type="email" class="form-control" placeholder="Email" name="Email" required />
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Password" name="Password" required />
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" placeholder="Confirm Password" name="ConfirmPassword" required />
                </div>
                <div class="mb-3">
                    <select class="form-select" name="Role" required>
                        <option value="">-- Select Role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Student">Student</option>
                        <option value="Instructor">Instructor</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary w-100">Create</button>
            </form>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
