@page
@model MyLMS2.Areas.Identity.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Log out";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<h1 class="container d-flex justify-content-center align-items-center">@ViewData["Title"]</h1>

<section class="page-section bg-primary text-white mb-0" style="padding: 0rem 0;">
    <div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
        <div class="card p-4" style="width: 400px; background-color: #ffffff; color: #000;">
            @if (User.Identity?.IsAuthenticated ?? false)
            {
                <form asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                      method="post" class="d-flex flex-column align-items-center">

                    <p class="mb-3 text-dark fw-semibold">Are you sure you want to log out?</p>

                    <button type="submit" class="btn btn-danger w-100 mb-2">Log out</button>
                    <a href="@Model.ReturnUrl" class="btn btn-secondary w-100">Cancel</a>
                </form>
            }
            else
            {
                <div class="text-center">
                    <p class="fw-semibold text-dark">You have successfully logged out of the application.</p>
                    <a asp-page="/Account/Login" class="btn btn-primary w-100 mt-3">Back to Login</a>
                </div>
            }
        </div>
    </div>
</section>
